<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#ffffff"> <!-- this is the ripple color(first touch color changes into this color) -->
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <!-- default button color -->
                    <solid android:color="@color/green_action_button_enabled" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <!-- button disabled color opposite behaviour -->
                    <solid android:color="@color/green_action_button_disabled" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>